<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgPostImageList"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="@dimen/plane_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.LokaSee.LargeComponent"
        app:srcCompat="@drawable/img_carousel" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardElevation="@dimen/plane_02"
        app:layout_constraintEnd_toEndOf="@+id/imgPostImageList"
        app:layout_constraintTop_toTopOf="@+id/imgPostImageList">

        <ImageButton
            android:id="@+id/btnDeletePostImageList"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="?attr/actionBarItemBackground"
            android:elevation="@dimen/plane_02"
            android:padding="@dimen/grid_0_25"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_close"
            app:tint="@color/lokasee_red_400" />
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>